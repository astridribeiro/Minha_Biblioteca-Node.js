<div id="book-page">
    <a href="/books">Voltar</a>
    <div class="container">
        <h1>{{book.title}}</h1>
        <p>Autor(a) {{book.authorname}}</p>
        <p>Páginas: {{book.pageqty}}</p>
        <p>Gênero Literário: {{book.genres}}</p>
        <p>Ano de lançamento: {{book.publishYear}}</p>
        <div class="actions">
        <a href="/books/edit/{{book.id}}">Editar</a>
        <form action="/books/remove/{{book.id}}" method="POST">
            <input type="submit" value="Remover">
        </form>
        </div>
    </div>
</div>